<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Register">

    <android.support.v4.view.ViewPager
        android:id="@+id/weeklyViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FAFAFA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:id="@+id/close_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:gravity="left" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/tv_textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="重置密码"
                android:textColor="@color/colorCalendarWorkday"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_edit_ui"
                android:hint="邮箱地址"
                android:inputType="textPersonName"
                android:textColor="#b3b3b3"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:layout_below="@+id/tv_textPassword"/>

            <TextView
                android:id="@+id/te_textMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_userName"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="重设密码的URL将发送到以上的邮箱地址"
                android:textColor="#b3b3b3"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_sendButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/te_textMail"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_ui"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>