<?xml version="1.0" encoding="utf-8"?>
<!--AgendaListView 中用于顶靠的顶部布局 AgendaHeaderView-->
<com.honhai.foxconn.fxccalendar.agenda.AgendaHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/day_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- 日期-->
            <TextView
                android:id="@+id/view_agenda_day_of_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="2018年11月28日"
                android:textSize="10dp"
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <!-- 星期-->
            <TextView
                android:id="@+id/view_agenda_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text = "星期三"
                android:textColor="@android:color/black"
                android:textSize="10dp" />

            <!-- 今天-->
            <TextView
                android:id="@+id/view_agenda_today"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="180dp"
                android:text = "今天"
                android:textColor="@android:color/black"
                android:textSize="10dp" />
        </LinearLayout>



</com.honhai.foxconn.fxccalendar.agenda.AgendaHeaderView>
